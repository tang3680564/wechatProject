/* miniprogram/pages/shopList/shopIndex.wxss */
.shopMainView{
  background: white;
  width: 100vw;
  height: 100vh;
  display: flex;
}

.shopScrollView {
width: 20vw;
height: 100vh;
background: #e9e9e9;
}

.shopListViewItem {
  height: 100rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.detaiBttomView {
  background: white;
  width: 100vw;
  height: 110rpx;
}

.listSelect {
  width: 100%;
  height: 100%;
  background: wheat;
  display: flex;
  align-items: center;
  justify-content: center;
}

.shopDetailScrollView{
  width: 80vw;
  height: 100vh;
}

.shopDetailCell {
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.shopDetailItem {
  width: 100%;
  height: 300rpx;
}

.shopDetailItemView {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.detailSelect {
  background:wheat;
}

.shopDetailImageView {
  width: 220rpx;
  height: 220rpx;
  border-radius: 20rpx;
  background: #f7f5f5;
  margin: 5%;
  margin-right: 0rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cellImage {
  width: 200rpx;
  height: 200rpx;
  border-radius: 100rpx;
  margin: 2%;
}

.cellRightView {
  flex-grow: 1;
  height: 100%;
  margin-left: 5%;
  display: flex;
  flex-direction: column;
}

.shoppingTitle {
  flex-grow: 1;
  font-size: 35rpx;
  margin-top: 9%;
  width: 100%;
}

.cellRightBttomView {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-bottom: 5%;
  justify-content: baseline;
}

.cellRightView text {
  color: red;
  text-align: bttom;
}

.priceText {
  font-size: 48rpx;
}

.priceText1 {
  text-align: center;
  font-size: 30rpx;
}

.priceView {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: baseline;
}

.cellRightBttomView view {
  flex-grow: 1;
}

.cellRightBttomView text {
  width: 50rpx;
  height: 50rpx;
  color: black;
  text-align: center;
  line-height: 50rpx;
  margin-top: 5%;
  margin-bottom: 5%;
  font-size: 37rpx;
}

.cellRightBttomView image {
  width: 50rpx;
  height: 50rpx;
  margin: 5%;
}

.totalPriceView {
 background: rgba(65, 65, 57, 1);
 width: 100vw;
 height: 90rpx;
 position: fixed;
 bottom: 0rpx;
 left: 0rpx;
 border-radius: 5rpx;
 display: flex;
 justify-content: left;
 align-items: center;
}



.totalPriceView1 {
    font-size: 30rpx;
    color: white;
    margin: 10rpx;
    margin-right: 0rpx;
    margin-left: 32rpx;
}

.totalPriceView2 {
  font-size: 60rpx;
  color: white;
  margin: 10rpx;
}

.totalPriceView3 {
  flex-grow: 1;
}

.totalPriceView4 {
  display: flex;
  height: 100%;
  justify-content: center;
  align-items: center;
  margin: 0rpx;
  background: rgb(252, 211, 29, 1);
}

.totalPriceView4 image {
  width: 60rpx;
  height: 60rpx;
  margin-left: 20rpx;
}

.totalPriceView4 text {
  height: 60rpx;
  margin-right: 40rpx;
  margin-left: 20rpx;
  margin-top: 15rpx;
  font-size: 35rpx;
  color: rgba(0, 0, 0, 0.651);
}
