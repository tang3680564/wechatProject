/* miniprogram/pages/shopingCart/shopingCart.wxss */

.mainView {
  width: 100vw;
  height: 100vh;
  background: white;
}

.cellView {
  margin-top: 32rpx;
  width: 100vw;
  height: 260rpx;
  display: flex;
}

.leftCellView {
  width: 35%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.cellImage {
  width: 200rpx;
  height: 200rpx;
  border-radius: 100rpx;
}

.rightCellView {
  flex-grow: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.cellShopingTitle {
  font-size: 40rpx;
  margin-left: 64rpx;
  margin-top: 24rpx;
}

.cellTotalPriceView {
  display: flex;
  width: 100%;
  align-items: baseline;
  color: red;
}
.cellTotalSpaceView {
    flex-grow: 1;
}

.cellChartView {
  font-size: 32rpx;
}

.cellPriceView {
  font-size: 56rpx;
  margin-right: 32rpx;
}

.rightCellBttomView {
  display: flex;
  width: 100%;
  flex-direction: row;
}

.rightCellBttomRightView {
  display: flex;
  flex-direction: row;
  align-items: center;
  
}

.cellNumberView {
 font-size: 40rpx;
 margin-right: 32rpx;
}

.rightCellBttomView image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 32rpx;
}

.lineView {
  height: 2rpx;
  background: #efefef;
  margin-left: 32rpx;
  margin-right: 32rpx;
}

.totalPriceView {
  background: rgba(65, 65, 57, 1);
  width: 100vw;
  height: 90rpx;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  border-radius: 5rpx;
  display: flex;
  justify-content: left;
  align-items: center;
 }
 
 
 
 .totalPriceView1 {
     font-size: 30rpx;
     color: white;
     margin: 10rpx;
     margin-right: 0rpx;
     margin-left: 32rpx;
 }
 
 .totalPriceView2 {
   font-size: 60rpx;
   color: white;
   margin: 10rpx;
 }
 
 .totalPriceView3 {
   flex-grow: 1;
 }
 
 .totalPriceView4 {
   display: flex;
   height: 100%;
   justify-content: center;
   align-items: center;
   margin: 0rpx;
   background: rgb(252, 211, 29, 1);
 }
 
 .totalPriceView4 image {
   width: 60rpx;
   height: 60rpx;
   margin-left: 20rpx;
 }
 
 .totalPriceView4 text {
   height: 60rpx;
   margin-right: 40rpx;
   margin-left: 20rpx;
   margin-top: 15rpx;
   font-size: 35rpx;
   color: rgba(0, 0, 0, 0.651);
 }